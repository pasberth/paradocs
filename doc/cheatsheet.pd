%include ../lib/paradocs/html.pd

%rule block cheatsheet
  %before %""<table class="cheatsheet">""
  %after %"</table>"
  %def | %tr%left

%rule block cheatsheet tr
  %before %"<tr>"
  %after %"</tr>"

%rule block cheatsheet tr left
  %extend everywhere
  %extend inline
  %extend block
  %before %""<td class="left">""
  %after %""</td>""
  %def | %right

%rule block cheatsheet tr right
  %extend everywhere
  %extend inline
  %extend block
  %before %""<td class="right">""
  %after %""</td>""
  %def | %tr %left

= Paradocs cheatsheet

== Formatted Text

%cheatsheet
|%pre"*bold*"|*bold*
|%pre"_italic_"|_italic_
|%pre"+monospace+"|+monospace+
|%pre"super^script^"|super^script^
|%pre"sub~script~"|sub~script~
|%pre"*_bold italic_*"|*_bold italic_*

== Links

%cheatsheet
|%pre"`cheatsheet.html`here`"|`cheatsheet.html`here`

== Lists

%cheatsheet
