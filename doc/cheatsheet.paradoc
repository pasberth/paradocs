%include ../lib/stdhtml.paradoc

%rule block cheatsheet
  %render-before <table class=\"cheatsheet\">
  %render-after </table>
  %def | %tr%left

%rule block cheatsheet tr
  %render-before <tr>
  %render-after </tr>

%rule block cheatsheet tr left
  %extend everywhere
  %extend inline
  %extend block
  %render-before <td class=\"left\">
  %render-after </td>
  %def | %right

%rule block cheatsheet tr right
  %extend everywhere
  %extend inline
  %extend block
  %render-before <td class=\"right\">
  %render-after </td>
  %def | %tr%left

= Paradocs cheatsheet

== Formatted Text

%cheatsheet
|%pre"*bold*"|*bold*
|%pre"_italic_"|_italic_
|%pre"+monospace+"|+monospace+
|%pre"super^script^"|super^script^
|%pre"sub~script~"|sub~script~
|%pre"*_bold italic_*"|*_bold italic_*

