%rule html head highlightjs
  %before %""<script src="http://yandex.st/highlightjs/8.0/highlight.min.js"></script>""

%rule html head highlightjs initHighlightingOnLoad
  %before %""<script type="text/javascript">hljs.initHighlightingOnLoad();</script>""

%rule html head highlightjs haskell
  %before %""<script src="http://yandex.st/highlightjs/8.0/languages/haskell.min.js"></script>""

%rule html head highlightjs default.css
  %before %""<link rel="stylesheet" href="http://yandex.st/highlightjs/8.0/styles/default.min.css">""

%rule html head highlightjs github.css
  %before %""<link rel="stylesheet" href="http://yandex.st/highlightjs/8.0/styles/github.min.css">""

%rule block pre haskell
  %extend inline
  %before %""<code class="haskell language-haskell">""
  %after %"</code>"
